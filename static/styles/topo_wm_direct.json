{
    "version": 8,
    "name": "Example",
    "glyphs": "{fontstack}/{range}.pbf",
    "sources": {
        "basiskaart": {
            "type": "vector",
            "url": "http://t_rex:6767/static/tilejson_direct.json"
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "#ffffff"
            }
        },
        {
            "id": "water",
            "source":"basiskaart",
            "source-layer":"bgt_vw_waterdeel_vlak",
            "type": "fill",
            "paint": {
                "fill-color": "#95C6D5"
            }
        },
        {
            "id": "built_up_areas",
            "source": "basiskaart",
            "source-layer": "bgt_vw_terreindeel_vlak",
            "type": "fill",
            "filter": ["match",
                [
                    "get",
                    "type"
                ],
                ["bedrijfsterrein","overig" ],
                true,
                false
            ],
            "paint": {
                "fill-color": [
                    "match",
                    [
                        "get",
                        "type"
                    ],
                    "bedrijfsterrein",
                    "#f6f6f4",
                    "overig",
                    "#f6f6f4",
                    "#f00"
                ],
                "fill-outline-color": "#c9c7c2"
            }
        },
        {
            "id": "terrain",
            "source": "basiskaart",
            "source-layer": "bgt_vw_terreindeel_vlak",
            "type": "fill",
            "filter": ["match",
                [
                    "get",
                    "type"
                ],
                ["bedrijfsterrein","overig" ],
                false,
                true
            ],
            "paint": {
                "fill-color": [
                    "match",
                    [
                        "get",
                        "type"
                    ],
                    "basaltblokken_steenglooiing",
                    "#f6f6f4",
                    "boomgaard",
                    "#CBE0B8",
                    "boomteelt",
                    "#CBE0B8",
                    "bos_groen_sport",
                    "#CBE0B8",
                    "bouwland",
                    "#dceacf",
                    "dodenakker",
                    "#CBE0B8",
                    "dodenakker_met_bos",
                    "#CBE0B8",
                    "erf",
                    "#F9F9E7",
                    "fruitteelt",
                    "#CBE0B8",
                    "gemengd bos",
                    "#CBE0B8",
                    "gesloten verharding",
                    "#FFFFFF",
                    "grasland agrarisch",
                    "#DCEACF",
                    "grasland overig",
                    "#DCEACF",
                    "groenvoorziening",
                    "#F9F9E7",
                    "half verhard",
                    "#FFFFFF",
                    "heide",
                    "#ddd6e5",
                    "houtwal",
                    "#F9F9E7",
                    "loofbos",
                    "#CBE0B8",
                    "moeras",
                    "#CBE0B8",
                    "naaldbos",
                    "#CBE0B8",
                    "onverhard",
                    "#F9F9E7",
                    "open verharding",
                    "#FFFFFF",
                    "oever, slootkant",
                    "#F9F9E7",
                    "spoorbaanlichaam",
                    "#dddcda",
                    "perron",
                    "#FFFFFF",
                    "rietland",
                    "#F9F9E7",
                    "strekdam",
                    "#FFFFFF",
                    "struiken",
                    "#DCEACF",
                    "zand",
                    "#F9F9E7",
                    "#f00"
                ],
                "fill-outline-color": "#c9c7c2"
            }
        },
        {
            "id": "roadside",
            "source": "basiskaart",
            "source-layer": "bgt_vw_wegdeel_vlak",
            "type": "fill",
            "filter": [
                "==",
                [
                    "get",
                    "type"
                ],
                "berm"
            ],
            "paint": {
                "fill-color": [
                    "match",
                    [
                        "get",
                        "subtype"
                    ],
                    "open verharding",
                    "#F6F3F4",
                    "gesloten verharding",
                    "#F6F3F4",
                    "transitie",
                    "#F6F3F4",
                    "half verhard",
                    "#F6F3F4",
                    "groenvoorziening",
                    "#DCEACF",
                    "onverhard",
                    "#DCEACF",
                    "#f00"
                ]
            }
        },
        {
            "id": "water_line",
            "source": "basiskaart",
            "source-layer": "bgt_vw_waterdeel_lijn",
            "type": "line",
            "filter": [
                "match",
                [
                    "get",
                    "type"
                ],
                [
                    "smalle_waterloop",
                    "brede_waterloop"
                ],
                true,
                false
            ],
            "layout": {
                "line-cap": "round",
                "line-join": "round",
                "visibility": "visible"
            },
            "paint": {
                "line-color": "#95C6D5",
                "line-width": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    11,
                    0,
                    11.5,
                    1,
                    12,
                    1.5,
                    13,
                    1.2
                ]
            }
        },
        {
            "id": "infrastructure_road-casing",
            "source": "basiskaart",
            "source-layer": "bgt_vw_wegdeel_vlak",
            "type": "line",
            "filter": [
                "match",
                ["string", [
                    "get",
                    "type"
                ]],
                ["parkeervlak", "rijbaan lokale weg","fietspad","inrit","transitie","rijbaan autoweg","rijbaan regionale weg","OV-baan","overweg","baan voor vliegverkeer", "rolbaan_platform",  "startbaan_landingsbaan", "autosnelweg"],
                true,
                false
            ],
            "paint": {
                "line-color": [ "match",
                    [
                        "get",
                        "type"
                    ],
                    "rolbaan_platform",
                    "#ffffff",
                    "startbaan_landingsbaan",
                    "#ffffff",
                    "#C9C7C2"
                ],
                "line-width": 2
            }
        },
        {
            "id": "infrastructure_road-fill",
            "source": "basiskaart",
            "source-layer": "bgt_vw_wegdeel_vlak",
            "type": "fill",
            "filter": [
                "match",
                ["string", [
                    "get",
                    "type"
                ]],
                ["parkeervlak","rijbaan lokale weg","fietspad","inrit","transitie","rijbaan autoweg","rijbaan regionale weg","OV-baan","overweg","baan voor vliegverkeer", "rolbaan_platform", "startbaan_landingsbaan", "autosnelweg"],
                true,
                false
            ],
            "paint": {
                "fill-color": "#ffffff"
            }
        },
        {
            "id": "infrastructure_pedestrian-casing",
            "source": "basiskaart",
            "source-layer": "bgt_vw_wegdeel_vlak",
            "type": "line",
            "filter": [
                "match",
                [
                    "get",
                    "type"
                ],
                ["voetpad","verkeerseiland","voetpad op trap","voetgangersgebied","woonerf","ruiterpad"],
                true,
                false
            ],
            "paint": {
                "line-color": "#C9C7C2",
                "line-width": 2
            }
        },
        {
            "id": "infrastructure_pedestrian_fill",
            "source": "basiskaart",
            "source-layer": "bgt_vw_wegdeel_vlak",
            "type": "fill",
            "filter": [
                "match",
                [
                    "get",
                    "type"
                ],
                ["voetpad","verkeerseiland","voetpad op trap","voetgangersgebied","woonerf","ruiterpad"],
                true,
                false
            ],
            "paint": {
                "fill-color": "#f7f3f5"
            }
        },
        {
            "id": "infrastructure_bridge",
            "source": "basiskaart",
            "source-layer": "bgt_vw_inrichtingselement_vlak",
            "type": "fill",
            "filter": [
                "match",
                [
                    "get",
                    "type"
                ],
                ["aanlegsteiger","steiger"],
                true,
                false
            ],
            "paint": {
                "fill-color": "#f7f3f5"
            }
        },
        {
            "id": "railways",
            "type": "line",
            "source": "basiskaart",
            "source-layer": "bgt_vw_spoor_lijn",
            "filter": [">=","relatievehoogteligging",0],
            "paint": {
                "line-color": [
                    "match",
                    [
                        "get",
                        "type"
                    ],
                    "sneltram",
                    "#FC7F7F",
                    "tram",
                    "#FC7F7F",
                    "trein",
                    "#9D9D9D",
                    "#ffffff"
                ],
                "line-width": [
                    "interpolate",
                    [
                        "exponential",
                        1.1
                    ],
                    [
                        "zoom"
                    ],
                    10,
                    [
                        "match",
                        [
                            "get",
                            "type"
                        ],
                        "sneltram",
                        0,
                        "tram",
                        0,
                        "trein",
                        0,
                        0
                    ],
                    11,
                    [
                        "match",
                        [
                            "get",
                            "type"
                        ],
                        "sneltram",
                        0,
                        "tram",
                        0,
                        "trein",
                        0.5,
                        0
                    ],
                    15.5,
                    [
                        "match",
                        [
                            "get",
                            "type"
                        ],
                        "sneltram",
                        0.5,
                        "tram",
                        0.5,
                        "trein",
                        3.5,
                        0
                    ],
                    20,
                    [
                        "match",
                        [
                            "get",
                            "type"
                        ],
                        "sneltram",
                        2,
                        "tram",
                        2,
                        "trein",
                        3.5,
                        0
                    ]
                ],
                "line-opacity": [
                    "case",
                    [
                        "get",
                        "tunnel"
                    ],
                    0.5,
                    1
                ]
            }
        },
        {
            "id": "railway-hatching",
            "type": "line",
            "source": "basiskaart",
            "source-layer": "bgt_vw_spoor_lijn",
            "filter": [
                "==",
                [
                    "get",
                    "type"
                ],
                "trein"
            ],
            "paint": {
                "line-color": "#ffffff",
                "line-dasharray": [
                    8,
                    8
                ],
                "line-width": [
                    "interpolate",
                    [
                        "exponential",
                        1.1
                    ],
                    [
                        "zoom"
                    ],
                    14.5,
                    0,
                    15,
                    2,
                    20,
                    2.5
                ]
            }
        },
        {
            "id": "buildings",
            "source": "basiskaart",
            "source-layer": "bgt_vw_gebouw_vlak",
            "type": "fill",
            "filter": [">=","relatievehoogteligging",0],
            "paint": {
                "fill-color": [
                    "match",
                    [
                        "get",
                        "type"
                    ],
                    "ligplaats",
                    "rgba(229, 227, 222, 0.6)",
                    "rgba(229, 227, 222, 1.0)"
                ],
                "fill-outline-color": "#C9C7C2"
            }
        },
        {
            "id": "courtyards",
            "source": "basiskaart",
            "source-layer": "bgt_vw_terreindeel_vlak",
            "type": "fill",
            "maxzoom": 16,
            "minzoom": 14,
            "filter": [
                "==",
                [
                    "get",
                    "type"
                ],
                "binnentuin"
            ],
            "paint": {
                "fill-color": "#F9F9E7",
                "fill-outline-color": "#C9C7C2"
            }
        },
        {
            "id": "roads-outline",
            "type": "line",
            "source": "basiskaart",
            "source-layer": "bgt_vw_wegdeel_lijn",
            "paint": {
                "line-color": "#333333",
                "line-width": 1
            }
        },
        {
            "id": "house_numbers",
            "source": "basiskaart",
            "source-layer": "labels",
            "type": "symbol",
            "minzoom": 16,
            "maxzoom": 22,
            "filter": [
                "==",
                ["get","type"],
                "nummeraanduiding"
            ],
            "layout": {
                "text-allow-overlap": false,
                "text-ignore-placement": false,
                "text-padding": 2.5,
                "text-font": [
                    "open-sans"
                ],
                "text-anchor": "center",
                "text-field": [
                    "to-string",
                    [
                        "get",
                        "tekst"
                    ]
                ],
                "text-size": [
                    "interpolate",
                    [
                        "exponential",
                        1
                    ],
                    [
                        "zoom"
                    ],
                    16,
                    8,
                    20,
                    13
                ],
                "text-max-width": 3,
                "text-rotate": {
                    "type": "identity",
                    "property": "hoek"
                },
                "text-rotation-alignment": "map"
            },
            "paint": {
                "text-halo-blur": 0.5,
                "text-color": "#666",
                "text-halo-width": 1,
                "text-halo-color": "#ffffff"
            }
        }
    ]
}
